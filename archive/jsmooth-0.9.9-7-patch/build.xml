   <target name="clean64">
     <antcall target="compileskel64">
       <param name="skelname" value="util-core"/>
       <param name="skelflags" value="${skelflags}"/>
       <param name="target" value="clean"/>
     </antcall>
     <antcall target="compileskel64">
       <param name="skelname" value="util-net"/>
