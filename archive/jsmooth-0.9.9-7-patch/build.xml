		<java classname="net.charabia.jsmoothgen.application.swtgui.JSmoothApplication"
		 	  fork="yes" >
		 	
			<classpath refid="jsmooth.class.path"/>
			<classpath>
				<pathelement path="${jsmoothjar}"/>
